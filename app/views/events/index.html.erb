<div class="container-fluid mb-4 gy-4 p-5 pt-1">

    <div class='row pt-0'>
        <%= link_to 'Members', members_path %>
    </div>

    <div class='row'>
        <h1>Events</h1>
    </div>

    <div class='row'>
        <%= month_calendar(attribute: :start_time, end_attribute: :end_time, events: @recurring_events) do |date, events| %>
            <%= date.day %>
        
            <% events.each do |event| %>
                <% if event.frequency === 'Daily' %>
                    <div>
                        <%= link_to event.description, event_path(id: event.id), class: 'text-decoration-none text-success' %>
                    </div>
                <% end %>
                <% if event.frequency === 'Weekly' %>
                    <div>
                        <%= link_to event.description, event_path(id: event.id), class: 'text-decoration-none text-info' %>
                    </div>
                <% end %>
                <% if event.frequency === 'Monthly' || event.frequency === 'Annually' %>
                    <div>
                        <%= link_to event.description, event_path(id: event.id), class: 'text-decoration-none text-primary' %>
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>

    <div class='row pb-1'>
        <%= link_to 'New Event', new_event_path %>
    </div>

</div>