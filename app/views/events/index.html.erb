<div class="container-fluid mb-4 gy-4 p-5 pt-1">

    <div class='row'>
        <h1>Events</h1>
    </div>

    <div class='row'>
        <%= render partial: 'calendar', locals: { events: @recurring_events } %>
    </div>

    <div>
			<ul class='list-group list-group-flush'>
				<% @events.each do |event| %>
					<li class='list-group-item d-flex justify-content-between align-items-center'>
							<%= link_to event.description.to_s, event_path(event.id), method: :get, class: 'link' %>
							<span class="badge bg-primary rounded-pill"><%= event.members.count %></span>
					</li>
				<% end %>
			</ul>
    </div>

    <div class='row p-1'>
        <%= link_to 'New Event', new_event_path %>
    </div>

</div>